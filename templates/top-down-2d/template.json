{
  "name": "2D Top-Down",
  "id": "top-down",
  "version": "1.0.0",
  "dimension": "2d",
  "description": "Top-down movement for RPG or adventure games",
  "features": [
    "8-directional movement",
    "No gravity",
    "Health component",
    "Interact action"
  ],
  "packages": {},
  "components": ["health_component"],
