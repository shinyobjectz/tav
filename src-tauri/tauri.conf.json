{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Tav",
  "version": "0.1.0",
  "identifier": "com.kobold.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Tav",
        "width": 1400,
        "height": 900,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 800,
        "minHeight": 600,
        "decorations": false,
        "transparent": false
      }
    ],
    "security": {
      "csp": "default-src 'self' 'unsafe-inline' 'unsafe-eval' blob: data:; connect-src 'self' http://127.0.0.1:* ws://127.0.0.1:* https://* wss://*; frame-src 'self' http://127.0.0.1:*; img-src 'self' data: blob: http://127.0.0.1:*; script-src 'self' 'unsafe-inline' 'unsafe-eval' blob: http://127.0.0.1:*"
    }
  },
  "bundle": {
    "externalBin": [
      "binaries/nitrogen-sidecar"
    ]
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
